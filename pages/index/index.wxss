.container {
  padding: 16px;
  min-height: 100vh;
  box-sizing: border-box;
  padding-top:0;
}

.search-bar {
  margin-bottom: 16px;
}

.search-input {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 8px;
  padding: 8px 12px;
  box-shadow: 0 2px 4px var(--shadow-color);
}

.search-input .icon {
  color: var(--text-secondary);
  margin-right: 8px;
  font-size: 16px;
}

.search-input input {
  flex: 1;
  height: 32px;
  font-size: 14px;
}

.category-list {
  margin-bottom: 16px;
}

/* 宫格容器 */
.category-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10px;
  background: #f8fafc;
  padding: 14px;
  border-radius: 12px;
}

/* 宫格卡片 */
.category-card {
  background: #fff;
  border: 1px solid var(--border-color);
  border-radius: 12px;
  box-shadow: 0 2px 6px var(--shadow-color);
  text-align: center;
  padding: 12px 8px;
  color: var(--text-primary);
  transition: transform .15s ease, box-shadow .15s ease, background-color .2s ease;
}

.category-card .icon-img{
  width: 36px;
  height: 36px;
  margin: 0 auto 4px;
  display: block;
}

.category-card .name {
  font-size: 14px;
  font-weight: 500;
}

.category-card:active {
  transform: translateY(1px);
  box-shadow: 0 1px 3px var(--shadow-color);
}

.category-card.active {
  background: var(--primary-color);
  color: #fff;
  border-color: var(--primary-color);
  box-shadow: 0 4px 10px rgba(59,130,246,.25);
}

.question-list {
  padding-bottom: 32px;
}

.question-item {
  background: #fff;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px var(--shadow-color);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  position: relative;
  overflow: hidden;
}

.question-item:active {
  transform: translateY(1px);
  box-shadow: 0 1px 4px var(--shadow-color);
}

.question-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 4px;
  height: 100%;
  background: var(--primary-color);
  border-radius: 2px;
}

.question-item .title {
  font-size: 16px;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8px;
  padding-left: 12px;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 题目摘要 */
.excerpt {
  font-size: 13px;
  color: var(--text-secondary);
  margin: 0 0 10px 12px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.question-item .meta {
  display: flex;
  align-items: center;
  padding-left: 12px;
  gap: 12px;
}

.question-item .tag {
  display: inline-flex;
  align-items: center;
  padding: 4px 8px;
  background-color: var(--secondary-color);
  border-radius: 4px;
  font-size: 12px;
  color: var(--text-secondary);
}

.question-item .tag .icon {
  font-size: 12px;
  margin-right: 4px;
}

.question-item .time {
  display: inline-flex;
  align-items: center;
  font-size: 12px;
  color: var(--text-secondary);
}

.question-item .time .icon {
  font-size: 12px;
  margin-right: 4px;
}

.question-header {
  margin-bottom: 12px;
}

.question-title {
  font-size: 16px;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.question-meta {
  display: flex;
  align-items: center;
  gap: 12px;
}

.tag {
  display: inline-flex;
  align-items: center;
  padding: 4px 8px;
  background-color: var(--secondary-color);
  border-radius: 4px;
  font-size: 12px;
  color: var(--text-secondary);
}

.tag .fas {
  margin-right: 4px;
  font-size: 12px;
}

.time {
  display: inline-flex;
  align-items: center;
  font-size: 12px;
  color: var(--text-secondary);
}

.time .fas {
  margin-right: 4px;
  font-size: 12px;
}

.question-content {
  font-size: 14px;
  color: var(--text-secondary);
  margin-bottom: 12px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.question-footer {
  display: flex;
  align-items: center;
  gap: 16px;
  padding-top: 12px;
  border-top: 1px solid var(--border-color);
}

.action-item {
  display: flex;
  align-items: center;
  gap: 4px;
  color: var(--text-secondary);
  font-size: 12px;
}

.action-item .fas {
  font-size: 14px;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16px;
  color: var(--text-secondary);
}

/* 骨架屏 */
.skeleton-card{
  background:#fff;
  border-radius:12px;
  padding:16px;
  margin-bottom:16px;
}
.skeleton-line{
  height: 12px;
  background: linear-gradient(90deg, #f2f3f5 25%, #f7f8fa 37%, #f2f3f5 63%);
  border-radius: 6px;
  margin: 10px 12px;
  animation: skeleton-loading 1.4s ease infinite;
}
.w-80{ width: 80%; }
.w-60{ width: 60%; }
.w-40{ width: 40%; }

@keyframes skeleton-loading {
  0% { background-position: 0 0; }
  100% { background-position: 200% 0; }
}

.loading .icon {
  font-size: 20px;
  margin-right: 8px;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48px 16px;
  color: var(--text-secondary);
}

.empty .icon {
  font-size: 48px;
  margin-bottom: 16px;
  color: var(--border-color);
}

.header {
  text-align: center;
  margin-bottom: 80rpx;
}

.title {
  display: block;
  font-size: 56rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.subtitle {
  display: block;
  font-size: 32rpx;
  color: rgba(255,255,255,0.8);
  font-weight: 300;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 60rpx;
}

.info-card {
  background: rgba(255,255,255,0.95);
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1);
  backdrop-filter: blur(10rpx);
}

.label {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.value {
  display: block;
  font-size: 28rpx;
  color: #333;
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
  word-break: break-all;
  font-family: 'Monaco', 'Menlo', monospace;
}

.features {
  background: rgba(255,255,255,0.95);
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1);
  backdrop-filter: blur(10rpx);
}

.features-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.feature-item {
  font-size: 30rpx;
  color: #555;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  line-height: 1.6;
}

.footer {
  text-align: center;
  margin-top: 60rpx;
  padding-top: 40rpx;
}

/* badge样式已移到组件中 */

/* 下拉刷新和上拉加载样式 */
.refresh-container {
  width: 100%;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-secondary);
}

.refresh-container .icon {
  margin-right: 8px;
  animation: spin 1s linear infinite;
}

/* banner 样式 */
.banner-wrap {
  /* 抵消容器 padding，真正满屏 */
  margin: 0 -16px 12px;
}
.banner-swiper{
  width: 100%;
  height: 160px; /* 可按设计调整 */
}
.banner-img{
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
  border-radius: 0;
}

/* 分类标签高亮效果 */
.category-item.active .icon {
  color: #fff;
}

/* 问题卡片悬停效果 */
.question-item:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px var(--shadow-color);
}
