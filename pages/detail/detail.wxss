/* 分享按钮样式 */
.share-button {
  flex: 1;
  background: none !important;
  border: none !important;
  outline: none !important;
  padding: 0 !important;
  margin: 0 !important;
  line-height: 1 !important;
  font-weight: normal !important;
  color: #718096 !important;
  font-size: 28rpx !important;
}

.share-button::after {
  display: none;
}

/* 确保分享按钮和其他操作按钮样式一致 */
button.action-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #718096;
  font-size: 26rpx;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  transition: background-color 0.3s ease;
  background: none;
}

button.action-item:active {
  background: #f8fafc;
} 