page {
  background: #f6f7f9;
  height: 100vh;
}

.container-bg {
  min-height: 100vh;
  background: #f6f7f9;
  padding-bottom: env(safe-area-inset-bottom);
  display: flex;
  flex-direction: column;
}

/* Tab切换头部 */
.tab-header {
  display: flex;
  background: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 32rpx 0;
  font-size: 32rpx;
  color: #666;
  position: relative;
  transition: color 0.3s ease;
}

.tab-item.active {
  color: #667eea;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #667eea;
  border-radius: 2rpx;
}

/* Tab内容区域 */
.tab-content {
  flex: 1;
  overflow-y: auto;
  background: #f6f7f9;
}

.tab-panel {
  width: 100%;
  min-height: 100%;
  padding: 24rpx;
  box-sizing: border-box;
}

.content-image {
  width: 100%;
  display: block;
  border-radius: 16rpx;
  background: #ffffff;
}

.empty-image {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
  background: #ffffff;
  border-radius: 16rpx;
  color: #999;
  font-size: 28rpx;
}

/* 关于我页面样式 */
.about-panel {
  background: #f6f7f9;
  padding: 0;
}

.about-content {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.about-header {
  text-align: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.about-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.about-intro {
  margin-bottom: 40rpx;
}

.intro-text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  text-align: justify;
}

.highlights-section {
  margin-bottom: 40rpx;
  padding-left:24rpx;
}

.highlights-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 24rpx;
  display: block;
}

.highlights-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.highlight-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.highlight-icon {
  width: 32rpx;
  height: 32rpx;
  background: #667eea;
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 600;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.highlight-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.5;
  flex: 1;
}

.companies-section {
  margin-bottom: 32rpx;
}

.companies-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 24rpx;
  display: block;
}

.companies-list {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #f8f9fc;
  border-radius: 16rpx;
  padding: 24rpx;
}

.company-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.company-logo {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 12rpx;
  border-radius: 8rpx;
}

.company-name {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.qr-section {
  margin-bottom: 32rpx;
}

.qr-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 24rpx;
  display: block;
  text-align: center;
}

.qr-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f8f9fc;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
}

.qr-code {
  width: 300rpx;
  height: 300rpx;
  border-radius: 12rpx;
  background: #ffffff;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.qr-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  text-align: center;
}

.qr-wechat {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

.contact-section {
  margin-bottom: 32rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  background: #f8f9fc;
  border-radius: 16rpx;
  padding: 24rpx;
  gap: 16rpx;
}

.contact-icon {
  font-size: 32rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #667eea;
  border-radius: 50%;
  color: #ffffff;
}

.contact-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.contact-label {
  font-size: 24rpx;
  color: #999;
}

.contact-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.copy-btn {
  background: #667eea;
  color: #ffffff;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  border: none;
  line-height: 1;
}

.copy-btn::after {
  border: none;
}

.stats-section {
  display: flex;
  justify-content: space-around;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  margin-top: 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
  line-height: 1.3;
}

.header-banner {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 32rpx 40rpx;
  margin-bottom: 24rpx;
}

.banner-content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.banner-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.banner-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.services-list {
  padding: 0 24rpx;
}

.loading-tip,
.empty-tip {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 28rpx;
}

.service-item {
  background: #ffffff;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.service-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.service-content {
  padding: 32rpx;
}

.service-info {
  display: flex;
  flex-direction: column;
}

.service-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.service-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

.service-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.service-price {
  font-size: 40rpx;
  font-weight: 600;
  color: #ff6b6b;
}

.service-action {
  font-size: 28rpx;
  color: #667eea;
  padding: 12rpx 32rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 40rpx;
}
