<view class="container">
  <!-- Banner区域 -->
  <view class="banner-wrapper">
    <image 
      class="banner-image"
      src="{{bannerImage}}"
      mode="aspectFill"
      lazy-load="true"
      binderror="onImageError"
    />
  </view>

  <!-- 列表区域 -->
  <view class="reals-list">
    <view wx:if="{{loading && reals.length === 0}}" class="loading-tip">
      <text>加载中...</text>
    </view>

    <view wx:else>
      <view 
        class="real-item"
        wx:for="{{reals}}"
        wx:key="id"
        data-url="{{item.url}}"
        bindtap="openPDF"
      >
        <view class="item-icon-wrapper">
          <image 
            class="pdf-icon"
            src="{{pdfIcon}}"
            mode="aspectFit"
            lazy-load="true"
            binderror="onImageError"
          />
        </view>
        <view class="item-content">
          <view class="item-header">
            <text class="item-title">{{item.name}}</text>
          </view>
          <view class="item-footer">
            <text class="item-desc">点击查看大厂面试真题</text>
            <view class="item-arrow">›</view>
          </view>
        </view>
      </view>
    </view>

    <view wx:if="{{!loading && reals.length === 0}}" class="empty-tip">
      <text>暂无真题</text>
    </view>
  </view>
</view>
