page {
  background: linear-gradient(180deg, #f0f4ff 0%, #e8f0fe 50%, #f5f7fa 100%);
  height: 100vh;
  padding: 0;
  margin: 0;
}

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f4ff 0%, #e8f0fe 50%, #f5f7fa 100%);
  padding-bottom: env(safe-area-inset-bottom);
  width: 100%;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

.banner-wrapper {
  width: 100vw;
  height: 300rpx;
  overflow: hidden;
  background: #ffffff;
  margin-left: 0;
  padding: 0;
  box-sizing: border-box;
  position: relative;
  transform: translateX(calc((100vw - 100%) / -2));
}

.banner-image {
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
}

.reals-list {
  padding: 16rpx 20rpx;
}

.loading-tip,
.empty-tip {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 28rpx;
}

.real-item {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  width: 100%;
  box-sizing: border-box;
}

.real-item:active {
  transform: scale(0.98);
  background: #f8f9fc;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.item-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  background: #ffffff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
  padding: 8rpx;
  box-sizing: border-box;
}

.pdf-icon {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  min-width: 0;
}

.item-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.item-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1a1a1a;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.4;
}

.pdf-badge {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  padding: 6rpx 16rpx;
  flex-shrink: 0;
}

.pdf-text {
  font-size: 22rpx;
  color: #ffffff;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.item-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.item-desc {
  font-size: 26rpx;
  color: #999;
  flex: 1;
}

.item-arrow {
  font-size: 36rpx;
  color: #ccc;
  margin-left: 12rpx;
  flex-shrink: 0;
  font-weight: 300;
}

.loading-more,
.no-more {
  text-align: center;
  padding: 32rpx 0;
  color: #999;
  font-size: 26rpx;
}
