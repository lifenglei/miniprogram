.container {
  padding: 20rpx 32rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background: #f8fafc;
}

.form-group {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx var(--shadow-color);
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.label .required {
  color: #ef4444;
  margin-left: 8rpx;
  font-size: 28rpx;
}

.title-input {
  width: 100%;
  min-height: 88rpx;
  padding: 24rpx;
  font-size: 32rpx;
  border-radius: 16rpx;
  background: var(--secondary-color);
  color: var(--text-primary);
  line-height: 1.5;
  box-sizing: border-box;
}

.answer-input {
  width: 100%;
  min-height: 240rpx;
  padding: 24rpx;
  font-size: 30rpx;
  border-radius: 16rpx;
  background: var(--secondary-color);
  color: var(--text-primary);
  line-height: 1.6;
  box-sizing: border-box;
}

.input-placeholder {
  color: #9ca3af;
  font-size: 30rpx;
}

.category-list {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  margin-top: 16rpx;
}

.category-item {
  display: inline-flex;
  align-items: center;
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  background: var(--secondary-color);
  color: var(--text-secondary);
  transition: all 0.2s ease;
}

.category-item.active {
  background: var(--primary-color);
  color: #fff;
  font-weight: 500;
}

.category-item .icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

.btn-submit {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 64rpx;
  background: var(--primary-color);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 16rpx;
  transition: all 0.2s ease;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.2);
}

.btn-submit:active {
  transform: translateY(2rpx);
  opacity: 0.9;
}

.btn-submit.loading {
  opacity: 0.7;
}

.btn-submit .icon {
  margin-right: 16rpx;
  font-size: 36rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 错误提示 */
.error-tip {
  color: #ef4444;
  font-size: 24rpx;
  margin-top: 8rpx;
  display: flex;
  align-items: center;
}

.error-tip .icon {
  margin-right: 8rpx;
  font-size: 28rpx;
} 